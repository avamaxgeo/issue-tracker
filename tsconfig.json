{
  "compilerOptions": {
    "baseUrl": ".", // Important for resolving paths relative to the root
    "paths": {
      // These are common Next.js aliases, add others if you use them
      // Ensure these match your actual folder names
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/styles/*": [
        "styles/*"
      ], // <-- This is the crucial line for your CSS
      "@/types/*": [
        "types/*"
      ],
      "@/utils/*": [
        "utils/*"
      ] // Assuming you might have a 'utils' folder from your screenshot
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
